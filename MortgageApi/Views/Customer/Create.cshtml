@model MortgageApi.ViewModels.CustomerNS.CustomerViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Sign Up</h1>

<h4>Your Details</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" id="customerForm">
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" id="firstName"/>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" id="lastName" />
            </div>
            <div class="form-group">
                <label asp-for="DOB" class="control-label"></label>
                <input asp-for="DOB" class="form-control" name="bday" id="dob" type="date"/>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" id="email" />
            </div>

            <div class="form-group">
                <div class="alert alert-primary" id="feedback"></div>
                <input id="createCustomer" type="submit" value="Continue" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/customercreate.js"></script>
}
