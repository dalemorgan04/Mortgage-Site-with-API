@model MortgageApi.ViewModels.SearchNS.SearchViewModel

@{
    ViewData["Title"] = "Search Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-4">
        <div id="searchForm">

            @Html.AntiForgeryToken()

            <input type="hidden" asp-for="CustomerId" id="customerId" />
            <div class="form-group">
                <label for="propertyValue" class="control-label">Property Value:</label>
                <input id="propertyValue" name="" class="form-control" type="number" step="1000" min="0" max="9999999" />
            </div>
            <div class="form-group">
                <label for="deposit" class="control-label">Deposit:</label>
                <input id="deposit" name="deposit" class="form-control" type="number" step="1000" min="0" max="9999999" />
            </div>
            <div class="form-group">
                <label class="control-label">Mortgage Type:</label>
                <select id="mortgageType" class="custom-select">
                    <option value="0">All</option>
                    <option value="1">Fixed</option>
                    <option value="2">Variable</option>
                </select>
            </div>
            <div class="form-group" id="loanToValueContainer">
                <label class="control-label">Your Loan to Value:</label>
                <label class="control-label" id="loanToValue"></label>
            </div>
            <div class="form-group">
                <div class="alert alert-primary" id="feedback"></div>
                <input id="search" type="button" value="Search" class="btn btn-primary" form="searchForm" />
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/mortgagesearcriteria.js"></script>
}